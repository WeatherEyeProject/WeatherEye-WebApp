@model IEnumerable<WeatherEye.Models.EnvironmentalSensor>

@{
    ViewData["Title"] = "EnvironmentalSensor";
}
<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js/dist/Chart.min.css">
</head>

<h2>Wykres dla danych z czujnika Środowiska </h2>

<div>
    <canvas id="enviChart"></canvas>
</div>

<script>
    let dates = [];
    let humidity = [];
    let temperature = [];
    let pressure = [];

    @foreach (var item in Model)
    {
        <text>
            dates.push('@item.DateOfReading.ToString("yyyy-MM-dd HH:mm")');
            humidity.push('@item.Dampness');
            temperature.push('@item.Temperature');
            pressure.push('@item.Pressure');
        </text>
    }

        for (let i = 0; i < humidity.length; i++) {
        humidity[i] = humidity[i].toString();
        humidity[i] = humidity[i].replace(",", ".");
    }

    for (let i = 0; i < temperature.length; i++) {
        temperature[i] = temperature[i].toString();
        temperature[i] = temperature[i].replace(",", ".");
    }

    for (let i = 0; i < pressure.length; i++) {
        pressure[i] = pressure[i].toString();
        pressure[i] = pressure[i].replace(",", ".");
    }

    let ctx = document.getElementById('enviChart').getContext('2d');

    let chart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: dates, // Dane na osi OX
            datasets: [{
                label: 'Humidity Data', // Etykieta wykresu
                data: humidity, // Dane na osi OY
                backgroundColor: 'rgba(75, 192, 192, 0.2)', // Kolor wypełnienia wykresu
                fill: true,
                borderColor: 'rgba(75, 192, 192, 1)', // Kolor linii wykresu
                tension: 0.1, // Grubość linii wykresu
                yAxisID: 'y',
            },
            {
                label: 'Temperature Data',
                data: temperature,
                backgroundColor: 'rgba(192, 192, 192, 0.2)',
                fill: true,
                borderColor: 'rgba(192, 192, 192, 1)',
                tension: 0.1,
                yAxisID: 'y',
            },
            {
                label: 'Pressure Data', 
                data: pressure,
                backgroundColor: 'rgba(139, 0, 0, 0.2)',
                fill: true,
                borderColor: 'rgba(19, 0, 0, 1)', 
                tension: 0.1,
                yAxisID: 'y1',
            }
            ]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    type: 'linear',
                    position: 'left',
                    title: {
                        display: 'true',
                        text: 'Oś dla temperatury i wilgoci',
                        font: {
                            size: 30
                        }
                    },
                },
                y1: {
                    type: 'linear',
                    position: 'right',
                    title: {
                        display: 'true',
                        text: 'Oś dla ciśnienia',
                        font: {
                            size: 30
                        }
                    },
                }
            }
        }
    });

</script>


<h2>Odczyty z czujnika środowiska </h2>

<table class="table">
    <thead>
        <tr>
            <th>Humidity</th>
            <th>Temperature</th>
            <th>Pressure</th>
            <th>IAQuality</th>
            <th>DateOfReading</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var uv in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => uv.Dampness)%</td>
                <td>@Html.DisplayFor(modelItem => uv.Temperature)&deg;C</td>
                <td>@Html.DisplayFor(modelItem => uv.Pressure)hPa</td>
                <td>@Html.DisplayFor(modelItem => uv.IAQuality) IAQ</td>
                <td>@Html.DisplayFor(modelItem => uv.DateOfReading)</td>
            </tr>
        }
    </tbody>
</table>