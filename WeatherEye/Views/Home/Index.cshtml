@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/mainSite.css"/>
</head>

<body id="mainPage">
    <div class="text-center">
        <h1 class="display-4">WeatherEye</h1>
        <p>Najlepsza stacja pogodowa</p>
    </div>
    <div id="actualBlock">
        <div id="inBlock" style="opacity:1;">
            <p id="temperature">@ViewBag.Temperature.Temperature.ToString() *C</p>
            <p id="rain">@ViewBag.Rain.Rain mm</p>
            @if (0 < @ViewBag.Dust.IntensityPm2_5 && @ViewBag.Dust.IntensityPm2_5 <= 13)
            {
                <p id="airCondition" style="background:rgb(0, 0, 255);">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>
            }
            else if (13 < @ViewBag.Dust.IntensityPm2_5 && @ViewBag.Dust.IntensityPm2_5 <= 35)
            {
                  <p id="airCondition" style="background:rgb(0, 255, 0);">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>

            }
            else if (35 < @ViewBag.Dust.IntensityPm2_5 && @ViewBag.Dust.IntensityPm2_5 <= 55)
            {
                      <p id="airCondition" style="background:rgb(255, 255, 0);">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>

            }
            else if (55 < @ViewBag.Dust.IntensityPm2_5 && @ViewBag.Dust.IntensityPm2_5 <= 75)
            {
                <p id="airCondition" style="background:rgb(255, 0, 255);">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>

            }
            else if (75 < @ViewBag.Dust.IntensityPm2_5 && @ViewBag.Dust.IntensityPm2_5 <= 110)
            {
                      <p id="airCondition" style="background:rgb(255, 0, 0);">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>

            }
            else if (110 < @ViewBag.Dust.IntensityPm2_5)
            {
                <p id="airCondition" style="background:rgb(100, 0, 0); color:white;">@ViewBag.Dust.IntensityPm2_5 &#181/m&sup3 </p>

            }
            <p id="ligth">@ViewBag.Light.IlluminanceLux UV</p>
        </div>
